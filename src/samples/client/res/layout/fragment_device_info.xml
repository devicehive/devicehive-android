<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.9"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Device"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@android:drawable/divider_horizontal_bright"
            android:paddingLeft="6dp"
            android:paddingRight="6dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="6dp"
            android:paddingRight="6dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="?android:attr/listPreferredItemHeight"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Device ID"
                android:textAppearance="@android:style/TextAppearance.Small" />

            <TextView
                android:id="@+id/device_id_text_view"
                android:layout_width="wrap_content"
                android:layout_height="?android:attr/listPreferredItemHeight"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:text="--"
                android:textAppearance="@android:style/TextAppearance.Small" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@android:drawable/divider_horizontal_bright"
            android:paddingLeft="6dp"
            android:paddingRight="6dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="6dp"
            android:paddingRight="6dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="?android:attr/listPreferredItemHeight"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Device Status"
                android:textAppearance="@android:style/TextAppearance.Small" />

            <TextView
                android:id="@+id/device_status_text_view"
                android:layout_width="wrap_content"
                android:layout_height="?android:attr/listPreferredItemHeight"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:text="--"
                android:textAppearance="@android:style/TextAppearance.Small" />
        </LinearLayout>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@android:drawable/divider_horizontal_bright"
            android:paddingLeft="6dp"
            android:paddingRight="6dp" />
        
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="6dp"
            android:paddingRight="6dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="?android:attr/listPreferredItemHeight"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Data"
                android:textAppearance="@android:style/TextAppearance.Small" />

            <TextView
                android:id="@+id/device_data_text_view"
                android:layout_width="wrap_content"
                android:layout_height="?android:attr/listPreferredItemHeight"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:text="--"
                android:textAppearance="@android:style/TextAppearance.Small" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@android:drawable/divider_horizontal_bright"
            android:paddingLeft="6dp"
            android:paddingRight="6dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Device Class"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@android:drawable/divider_horizontal_bright"
            android:paddingLeft="6dp"
            android:paddingRight="6dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="6dp"
            android:paddingRight="6dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="?android:attr/listPreferredItemHeight"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Name"
                android:textAppearance="@android:style/TextAppearance.Small" />

            <TextView
                android:id="@+id/device_class_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="?android:attr/listPreferredItemHeight"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:text="--"
                android:textAppearance="@android:style/TextAppearance.Small" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@android:drawable/divider_horizontal_bright"
            android:paddingLeft="6dp"
            android:paddingRight="6dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="6dp"
            android:paddingRight="6dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="?android:attr/listPreferredItemHeight"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Version"
                android:textAppearance="@android:style/TextAppearance.Small" />

            <TextView
                android:id="@+id/device_class_version_text_view"
                android:layout_width="wrap_content"
                android:layout_height="?android:attr/listPreferredItemHeight"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:text="--"
                android:textAppearance="@android:style/TextAppearance.Small" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@android:drawable/divider_horizontal_bright"
            android:paddingLeft="6dp"
            android:paddingRight="6dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="6dp"
            android:paddingRight="6dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="?android:attr/listPreferredItemHeight"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Is Permanent"
                android:textAppearance="@android:style/TextAppearance.Small" />

            <TextView
                android:id="@+id/device_class_is_permanent_text_view"
                android:layout_width="wrap_content"
                android:layout_height="?android:attr/listPreferredItemHeight"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:text="--"
                android:textAppearance="@android:style/TextAppearance.Small" />
        </LinearLayout>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@android:drawable/divider_horizontal_bright"
            android:paddingLeft="6dp"
            android:paddingRight="6dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="6dp"
            android:paddingRight="6dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="?android:attr/listPreferredItemHeight"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Data"
                android:textAppearance="@android:style/TextAppearance.Small" />

            <TextView
                android:id="@+id/device_class_data_text_view"
                android:layout_width="wrap_content"
                android:layout_height="?android:attr/listPreferredItemHeight"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:text="--"
                android:textAppearance="@android:style/TextAppearance.Small" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@android:drawable/divider_horizontal_bright"
            android:paddingLeft="6dp"
            android:paddingRight="6dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical" >
        </LinearLayout>
    </LinearLayout>

</ScrollView>